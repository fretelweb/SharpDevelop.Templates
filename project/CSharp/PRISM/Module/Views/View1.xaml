				Grid.Column="1"
				VerticalAlignment="Center"
				Margin="0,0,5,0"
				Height="22"
				Text="{Binding CurrentContact.ContactData.Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />


<mv:UserControlViewBase x:Class="${SolutionName}.Modules.Main.Views.FileMenuView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mv="clr-namespace:${SolutionName}.Base.Mvvm;assembly=${SolutionName}.Base">
	
 	<Grid>
		<Menu Background="Transparent">
			<MenuItem Header="File">
				<MenuItem Header="{Binding NavExit.Caption}" Command="{Binding ExitCommand}">
					<MenuItem.Icon>
						<Image Source="{Binding NavExit.ItemImage}" />
					</MenuItem.Icon>
				</MenuItem>
			</MenuItem>
		</Menu>
	</Grid>
	
</mv:UserControlViewBase>
			Text="{Binding CurrentContact.ContactData.Salutation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
		
		
			<TextBlock
				Grid.Row="4"
				Grid.Column="0"
				FontSize="12"
				VerticalAlignment="Center"
				Margin="5,0,0,0"
